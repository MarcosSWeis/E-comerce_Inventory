@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="row" id="table-store">
    <div class="col-9 text-left ">
        <h2 class="text-primary">Stock de Productos</h2>
    </div>
    <div class="col-3 text-right mt-3 ">
        <a class=" btn btn-primary" asp-action="NewInventory"> <i class="bi bi-plus"></i>Crear nuevo inventario</a>
    </div>
</div>

<br />

<div class="p-4 border rounded ">
    <table class="table" id="tbl-data" style=" width:100%">
        <thead>
            <tr>
                <th>Tienda</th>
                <th>Producto</th>
                <th>Costo</th>
                <th>Cantidad</th>
            </tr>
        </thead>
    </table>
</div>


@section Scripts {
    <script src="~/js/inventory.js"></script>
}