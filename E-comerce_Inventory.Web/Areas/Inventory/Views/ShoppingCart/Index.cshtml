@model E_comerce_Inventory.Models.ViewModels.ShoppingCartViewModel

<form method="post">
    <br />
    @if (Model.ShoppingCartList.Count() > 0)
    {
      
        <div class="container">
                <div class="card">
                    <div class="card-header bg-dark text-light ml-0 row ">
                        <div class="col-6">
                            <i class="fa fa-shopping-cart"></i> &nbsp;
                            Carro de Compras
                        </div>
                        <div class="col-6 text-right">
                            <a asp-area="Inventory" asp-controller="Home" asp-action="Index" class="btn btn-outline-info btn-sm">Seguir Comprando</a>
                        </div>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.ShoppingCartList)
                        {
                            <div class="row">
                                <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                    <img src="@item.Product.ImageUrl" class="rounded" width="100" />
                                </div>
                                <div class="col-12 text-sm-center col-lg-6 text-lg-left">
                                    <h5><strong>@item.Product.Description</strong></h5>
                                </div>
                                <div class="col-12 text-sm-center col-lg-5 text-lg-right row">
                                    <div class="col-4 text-md-right" style="padding-top:5px;">
                                    <h6><strong>@item.Product.Price.ToString("C")<span class="text-muted"> x </span> @item.Quantity </strong></h6>
                                    </div>
                                    <div class="col-6 col-sm-4 col-lg-6">
                                        <div class="float-right mx-1 mt-1">
                                        <a class="btn btn-primary" asp-action="AddProductShoppingCart" asp-route-shoppingcartid="@item.Id">
                                                <i class="bi bi-plus"></i>
                                            </a>
                                        </div>
                                        <div class="float-right mx-1 mt-1">
                                        <a class="btn btn-primary" asp-action="ReduceProductShoppingCart" asp-route-shoppingcartid="@item.Id">
                                                <i class="bi bi-dash"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-2 col-sm-4 col-lg-2 text-right">
                                    <a class="btn btn-outline-danger" asp-action="DeleteProductOfShoppingCart" asp-route-shoppingcartid="@item.Id">
                                                <i class="bi bi-trash3"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <hr />
                        }

                        <div class="row">
                            <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                                <ul class="list-group">
                                    <li class="list-group-item d-flex justify-content-between bg-light">
                                        <span class="text-info"> Total</span>
                                        <strong class="text-info"> <span id="txtTotalOrden">@Model.Order.OrderTotal.ToString("C")</span></strong>
                                    </li>
                                </ul>
                            </div>
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="card-footer row">

                            <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">

                                <a asp-area="Inventory" asp-controller="ShoppingCart" asp-action="Proceder" class="btn btn-success form-control">Proceder</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
       
    }

</form>

