@model IEnumerable<E_comerce_Inventory.Models.DataModels.Product>
@using System.Globalization;
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="row pb-3 justify-content-around" style="border: 1px solid #008cba; border-radius:5px">
        @foreach(var product in Model)
        {
            <div class="col-lg-2 col-md-3 col-sm-12 mb-4" >             
                <div class="card " style="border:0px">
                          <img src="@product.ImageUrl" class="card-img-top rounded p-1"/>
                          <dvi class="card-body">

                                 <h5 class="card-text " style="color:white">
                                      @product.Description
                                 </h5>                                                               
                                 <p class="card-text">
                                      Precio : <b>@product.Price.ToString("C",new CultureInfo("es-AR"))</b>
                                 </p>
                                 <a asp-action="Detail" class="btn btn-primary form-control" asp-route-id="@product.Id">Detalle</a>                                
                          </dvi>
                 </div>               
                
            </div>          
        }
    </div>
</div>