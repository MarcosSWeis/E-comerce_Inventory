@model IEnumerable<E_comerce_Inventory.Models.DataModels.Company>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="row" id="table-store">
    <div class="col-9 text-left ">
        <h2 class="text-primary"> Compania</h2>
    </div>
    @if (Model.Count() == 0)
    {        
    <div class="col-3 text-right mt-3 ">
        <a class=" btn btn-primary" asp-action="Upsert"> <i class="bi bi-plus"></i>Crear nueva Compania</a>
    </div>
    }
</div>

<br />

<div class="p-4 border rounded ">
    <table class="table" id="tbl-data" style=" width:100%">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Pais</th>
                <th>Ciudad</th>
                <th>Telefono</th>    
                <th></th>
            </tr>
        </thead>
    </table>
</div>


@section Scripts {
    <script src="~/js/company.js"></script>
}